---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="Content-Language" content="en">
		<meta name="description" content="Luke Arsenault's portfolio site" />
		<meta name="keywords" content="full stack developer, portfolio, JavaScript, Python, ReactJS, Django, Node.js, Linux">
		<meta name="author" content="Your Name">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow">
		<title>{title}</title>
	</head>
	<body class="bg-slate-100/25">
		<slot />
	</body>
</html>

<style is:global>
	:root {

	}
	html {
		
	}
</style>
